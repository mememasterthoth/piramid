modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PiRaMID Server"

[[workflows.workflow]]
name = "PiRaMID Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
run = ["node", "start.js"]
